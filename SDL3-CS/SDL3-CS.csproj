<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <RootNamespace>SDL3</RootNamespace>
        <LangVersion>12</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>0.0.1-preview</Version>
        <Title>SDL3 C#</Title>
        <Authors>Eduard Gushchin</Authors>
        <Description>This is SDL3#, a C# wrapper for SDL3.</Description>
        <Copyright>Copyright (c) 2024 Eduard Gushchin.</Copyright>
        <PackageProjectUrl>https://github.com/edwardgushchin/SDL3-CS</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/edwardgushchin/SDL3-CS/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/edwardgushchin/SDL3-CS</RepositoryUrl>
        <RepositoryType>public</RepositoryType>
        <PackageTags>SDL, SDL3, SDL3-CS</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <Content Include="bin\Debug\net8.0\SDL3.dll" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="bin\**" />
      <None Remove="lib\SDL3.dll" />
      <Content Include="lib\SDL3.dll">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="bin\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="bin\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="SDL3.dll" />
    </ItemGroup>

</Project>
